@{
    ViewData["Title"] = "Cooking Class Cost Calculator";
}
<h1>@ViewData["Title"]</h1>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="calculator.js"></script>

<p>Use this calculator to see how much your cooking class will cost!</p>
<body>
    <label for="hours">Enter the number of hours you need:</label>
    <input type="number" id="hours" min="0">
    <br>
    <label for="hourlyRate">Hourly rate:</label>
    <input type="text" id="hourlyRate" value="$50" readonly>
    <br>
    <button id="calculateButton">Calculate Total</button>
    <br>
    <label for="total">Total:</label>
    <input type="text" id="total" readonly>
    <br>
    <a href="/">Back to Home</a>
</body>